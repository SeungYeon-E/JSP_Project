package com.jsplec.bbs.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

import javax.naming.Context;
import javax.naming.InitialContext;
import javax.sql.DataSource;

import com.jsplec.bbs.dto.BDto;
import com.jsplec.bbs.dto.PageBlockDto;

public class PageBlockDao {
	
	PageBlockDto blockDto = null;
	DataSource dataSource;
	
	public PageBlockDao() {
		try {
			Context context = new InitialContext();
			dataSource = (DataSource) context.lookup("java:comp/env/jdbc/mvc");
		}catch(Exception e) {
			e.printStackTrace();
		}
	}
	
	public PageBlockDto getNumberOfPages() {
		StringBuffer sql = new StringBuffer();
		int numberOfBlocks;
		sql.append(" SELECT CEIL(COUNT(*) / ?) bId FROM mvc_board ");
		Connection conn = null;
		PreparedStatement pstmt = null;
		ResultSet rs = null;
		try {
			conn = dataSource.getConnection();
			pstmt = conn.prepareStatement(sql.toString());
			pstmt.setInt(1,  rs.getInt("bId"));
			rs = pstmt.executeQuery();
			if(rs.next())
			{
				numberOfBlocks = rs.getInt("bId");
				
				blockDto = new BDto(numberOfBlocks);
			}
			rs.close();
			pstmt.close();
		}
		catch (Exception e) {
			System.out.println(e);
		}
		return blockDto;
	}
}
